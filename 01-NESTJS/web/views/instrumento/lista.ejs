<%- include('../comunesinst/cabecera')%>



<div class='container'>
    <form action="lista-usuarios"method="get">
        <div >
            <a href="/usuario/vista-crear">
                <button class="btn btn-success">
                    Crear nuevo Usuario
                </button>
            </a>
        </div>


        <div class="mb-3">
            <label for="busqueda" class="form-label">
                Busqueda
            </label>
            <input placeholder="Ej:Adri"
                   type="text"
                   name="busqueda"
                   class="form-control"
                   id="busqueda"
                   aria-describedby="ayudaBusqueda">
            <div id="ayudaBusqueda" class="form-text">
                Puede buscar por nombre o apellido.
            </div>
        </div>
        <button type="submit" class="btn btn-primary w-100">Buscar</button>
    </form>
    <h1>Lista</h1>
    <table class="table text-center">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Nombre</th>
            <th scope="col">Apellido</th>
            <th scope="col">Eliminar</th>
        </tr>
        </thead>
        <tbody>
        <%datos.usuario.forEach((objeto)=>{%>
        <tr>
            <th><%=objeto.id%></th>
            <th><%=objeto.nombre%></th>
            <th><%=objeto.apellido%></th>
            <th><button class="btn btn-danger">Eliminar</button></th>
        </tr>
        <%})%>
        </tbody>
    </table>
</div>

<%- include('../comunesinst/footer')%>